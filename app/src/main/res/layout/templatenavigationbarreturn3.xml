<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_gravity="center_horizontal"
    android:background="@mipmap/barbutton"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/xiche_fanhui"
        android:layout_width="115dp"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="115dp"
            android:layout_height="45dp"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:text="排队订单:0"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fuwu_xichestate"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:scaleType="fitXY"
            android:src="@mipmap/jiedan"/>
        <TextView
            android:id="@+id/xiche_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="停止接单"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/touzi_quxiao"
        android:layout_width="115dp"
        android:layout_height="45dp"
        android:gravity="center_vertical|right">

        <ImageView
            android:id="@+id/fuwu_xiaoxi"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/xiaoxi"/>
    </LinearLayout>
</LinearLayout>