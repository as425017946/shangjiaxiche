<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".login.ShenfenyanzhengActivity">
    <include android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/templatenavigationbarreturn2"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@color/white"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textColor="@color/red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:text="商家名称"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/sfyz_shangjianame"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:hint="请输入商家名称"
                    android:textColor="@color/wholeziti"
                    android:textColorHint="@color/wholezitiinfo"
                    android:singleLine="true"
                    android:gravity="right"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@color/white"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textColor="@color/red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:text="选择城市"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/sfyz_shangjiadizhicity"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:hint="请选择城市"
                    android:focusable="false"
                    android:textColor="@color/wholeziti"
                    android:textColorHint="@color/wholezitiinfo"
                    android:gravity="right"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@color/white"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:textColor="@color/red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:text="商家地址"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/sfyz_shangjiadizhi"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:hint=""
                    android:textColor="@color/wholeziti"
                    android:textColorHint="@color/wholezitiinfo"
                    android:gravity="right"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@color/white"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:visibility="invisible"
                    android:textColor="@color/red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:text="法人姓名"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/sfyz_name"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:hint=""
                    android:textColor="@color/wholeziti"
                    android:textColorHint="@color/wholezitiinfo"
                    android:singleLine="true"
                    android:maxLength="15"
                    android:gravity="right"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@color/white"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:visibility="invisible"
                    android:textColor="@color/red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:text="联系电话"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/sfyz_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:inputType="number"
                    android:hint=""
                    android:textColor="@color/wholeziti"
                    android:textColorHint="@color/wholezitiinfo"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:gravity="right"
                    android:background="@null"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@color/white"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:visibility="invisible"
                    android:textColor="@color/red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:text="业务联系人"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/sfyz_yewulianxiren"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:inputType="text"
                    android:maxLength="15"
                    android:singleLine="true"
                    android:hint=""
                    android:textColor="@color/wholeziti"
                    android:textColorHint="@color/wholezitiinfo"
                    android:gravity="right"
                    android:background="@null"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@color/white"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:visibility="invisible"
                    android:textColor="@color/red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:text="邮箱号"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/sfyz_weixinhao"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:gravity="right"
                    android:hint=""
                    android:textColor="@color/wholeziti"
                    android:textColorHint="@color/wholezitiinfo"
                    android:background="@null"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:text="*"
                    android:visibility="invisible"
                    android:textColor="@color/red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:text="营业执照上传"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/zizhi_zhengmian"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/yyzzfb"/>
                    <!--android:src="@mipmap/yyzzzb"-->
                    <ImageView
                        android:id="@+id/zizhi_fanmian"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:visibility="gone"
                        android:scaleType="fitXY"
                        android:src="@mipmap/yyzzfb"/>
                </LinearLayout>
                <Button
                    android:id="@+id/sfyz_next"
                    android:layout_marginTop="20dp"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_marginBottom="40dp"
                    android:text="下一步"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:background="@mipmap/buttons"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>