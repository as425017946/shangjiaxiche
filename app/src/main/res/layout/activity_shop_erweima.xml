<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".wode.ShopErweimaActivity">
    <include android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/templatenavigationbarreturn2"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center">
        <ImageView
            android:id="@+id/erweima_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="15dp"
            android:src="@mipmap/ceshi"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/xuanzhong"
            android:textSize="14sp"
            android:text="用户扫描可使用小程序排号"/>
        <Button
            android:id="@+id/erweima_btn"
            android:layout_marginTop="50dp"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginBottom="30dp"
            android:text="保存到本地"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@mipmap/buttons"/>


    </LinearLayout>

</LinearLayout>