<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/templatenavigationbarreturn2"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/shenhe"
            android:layout_width="160dp"
            android:layout_height="144dp"
            android:scaleType="fitXY"
            android:src="@mipmap/shenhezhong"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/shenheinfo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/xuanzhong"
            android:text="恭喜，添加成功"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:id="@+id/addyouhuiquan_jixu"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:text="继续添加"
            android:textSize="15sp"
            android:textColor="@color/xuanzhong"
            android:background="@mipmap/yaoqingma"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:id="@+id/addyouhuiquan_ok"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:layout_height="45dp"
        android:text="完成"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:background="@mipmap/buttons"/>
</LinearLayout>