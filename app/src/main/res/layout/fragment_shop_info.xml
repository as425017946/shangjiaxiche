<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wode.shopinfo.ShopInfoFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店铺营业时间"
                    android:textColor="@color/wholeziti"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/shop_time_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="09:00"
                    android:textColor="@color/wholeziti"
                    android:background="@color/pickerview_bg_topbar"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/shop_time_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="18:00"
                    android:textColor="@color/wholeziti"
                    android:background="@color/pickerview_bg_topbar"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:textSize="14sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/wholehx"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店铺经营范围"
                    android:textColor="@color/wholeziti"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/shop_fanwei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/wholeziti"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/wholehx"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店铺联系方式"
                    android:textColor="@color/wholeziti"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/shop_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入联系电话"
                    android:inputType="number"
                    android:focusable="false"
                    android:textColor="@color/wholeziti"
                    android:textSize="14sp"
                    android:gravity="right"
                    android:maxLength="11"
                    android:background="@null"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="14sp"
                android:textColor="@color/wholeziti"
                android:text="店铺照片展示"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/shop_img1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/shopup"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@+id/shop_img2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/shopup"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@+id/shop_img3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/shopup"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitXY"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/shop_img4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/shopup"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@+id/shop_img5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/shopup"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@+id/shop_img6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/shopup"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitXY"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>